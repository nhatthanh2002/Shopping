<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.fragment.RegisterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        android:text="@string/register"
        android:textAppearance="@style/register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/top_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_start_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="288dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="93dp"
        android:text="@string/enter_your_personal_details_to_create_your_account"
        android:textAppearance="@style/enter_your_personal_details_to_create_your_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/background_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="143dp"
        android:background="@drawable/background_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:text="Full Name"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toTopOf="@+id/background_register" />

    <EditText
        android:id="@+id/ed_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@+id/background_register"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@+id/background_register"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/ed_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@+id/background_register"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <EditText
        android:id="@+id/ed_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@+id/background_register"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <Button
        android:id="@+id/btn_sing_up"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="113dp"
        android:background="@drawable/custom_button"
        android:text="@string/sing_up"
        android:textAppearance="@style/sign_in_to_continue"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/background_register" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@+id/background_register"
        app:layout_constraintStart_toStartOf="@+id/background_register"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="117dp"
        android:text="Email Address"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@id/background_register"
        app:layout_constraintTop_toTopOf="@id/background_register" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="204dp"
        android:text="Phone Number"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@id/background_register"
        app:layout_constraintTop_toTopOf="@id/background_register" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="291dp"
        android:text="Password"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@id/background_register"
        app:layout_constraintTop_toTopOf="@id/background_register" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="374dp"
        android:text="Confirm Password"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@id/background_register"
        app:layout_constraintTop_toTopOf="@id/background_register" />

    <include
        android:id="@+id/layoutSingIn"
        app:layout_constraintTop_toBottomOf="@id/btn_sing_up"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/sing_in" />
</androidx.constraintlayout.widget.ConstraintLayout>