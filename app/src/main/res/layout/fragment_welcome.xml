<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.fragment.WelcomeFragment">

    <ImageView
        android:id="@+id/top_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_start_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="137sp"
        android:layout_height="42sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:text="@string/welcome"
        android:textAppearance="@style/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_in_to_continue"
        android:layout_width="118dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="82dp"
        android:text="@string/sign_in_to_continue"
        android:textAppearance="@style/sign_in_to_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/background2"
        android:layout_width="440dp"
        android:layout_height="200dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="-40dp"
        android:layout_marginBottom="442dp"
        android:src="@drawable/group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/person_lap"
        android:layout_width="122.19dp"
        android:layout_height="151.58dp"
        android:layout_marginStart="20.79dp"
        android:layout_marginTop="155.42dp"
        android:src="@drawable/person_laptop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/ellipse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/red_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="202.85dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/red_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/orange_bag"
        android:layout_width="60.33dp"
        android:layout_height="82.15dp"
        android:layout_marginTop="213.12dp"
        android:layout_marginEnd="63.21dp"
        android:src="@drawable/orange_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="248dp"
        android:src="@drawable/heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/wallet"
        android:layout_width="47.06dp"
        android:layout_height="31.37dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="125.7dp"
        android:src="@drawable/wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/percent"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="118dp"
        android:src="@drawable/percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <Button
        app:layout_constraintTop_toBottomOf="@id/rmb_user"
        app:layout_constraintBottom_toBottomOf="@id/background_singin"
        app:layout_constraintEnd_toEndOf="@id/background_singin"
        app:layout_constraintStart_toStartOf="@id/background_singin"
        android:layout_marginTop="50dp"
        android:id="@+id/btn_sing_in"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/custom_button"
        android:text="@string/sing_in"
        android:textAppearance="@style/sign_in_to_continue"
        app:backgroundTint="@null"
         />


    <View
        android:id="@+id/background_singin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/background_singin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tvSingUpLayout"
        layout="@layout/sing_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sing_in" />

    <TextView
        android:id="@+id/tv_your_email"
        android:layout_width="121dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:text="@string/your_email_address"
        android:textAppearance="@style/your_email_"
        app:layout_constraintStart_toStartOf="@id/background_singin"
        app:layout_constraintTop_toTopOf="@id/background_singin" />

    <EditText
        android:id="@+id/ed_your_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@id/background_singin"
        app:layout_constraintStart_toStartOf="@id/background_singin"
        app:layout_constraintTop_toBottomOf="@id/tv_your_email"
        tools:ignore="Autofill,LabelFor,TextFields"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="129dp"
        android:text="@string/password"
        android:textAppearance="@style/password"
        app:layout_constraintStart_toStartOf="@id/background_singin"
        app:layout_constraintTop_toTopOf="@id/background_singin"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="410dp" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        android:textAppearance="@style/ed_sing_in"
        app:layout_constraintEnd_toEndOf="@id/background_singin"
        app:layout_constraintStart_toStartOf="@id/background_singin"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        tools:ignore="Autofill,LabelFor"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="452dp" />

    <CheckBox
        android:id="@+id/rmb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="227dp"
        android:button="@drawable/custom_check"
        android:text="@string/remember_me"
        android:textAppearance="@style/CheckBoxStyle"
        android:textColor="#899B9A"
        app:layout_constraintStart_toStartOf="@+id/background_singin"
        app:layout_constraintTop_toTopOf="@+id/background_singin"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="30dp"
        android:text="@string/forgot_password"
        android:textAppearance="@style/forgot_password"
        app:layout_constraintEnd_toEndOf="@id/background_singin"
        app:layout_constraintTop_toTopOf="@+id/background_singin"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="511dp" />


</androidx.constraintlayout.widget.ConstraintLayout>